type Tag {
id: ID! @unique
name: String! @unique
}

type Question {
id: ID! @unique
user: User @relation(name: "AskingUser")
tags: [String!]
description: String!
coins: Int @default(value: "2")
active: Boolean
title: String!
text: Boolean!
audio: Boolean!
video: Boolean!
duration: Int! @default(value: "5")
answeredBy: User @relation(name: "AnswerUser")
}